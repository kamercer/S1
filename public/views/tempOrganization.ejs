<!DOCTYPE html>
<html>
    <head>
    <!-- Standard Meta -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

    <!-- Site Properties -->
    <title>Fixed Menu Example - Semantic</title>

    <script src="//code.jquery.com/jquery-2.2.3.min.js"></script>
    <script src="/semantic/dist/semantic.js"></script>

    <link rel="stylesheet" type="text/css" href="/semantic/dist/semantic.css">
    <style type="text/css">
    body {
        background-color: #FFFFFF;
    }

    .column{
        border: black 1px solid;
    }
    </style>

    </head>
    <body>

        <div class="ui fixed inverted menu">
            <div class="ui container">
                <a href="/" class="header item">
                    Service One
                </a>

                <% if (statusNumber > 0){ %>
                    <div class="ui simple dropdown item">
                        Organizations <i class="dropdown icon"></i>
                        <div class="menu">
                            <% for(var i = 0; i < user.memberOf.length; i++){ %>
                                <a class="item" href="/organization/<%= user.memberOf[i].name %>"><%= user.memberOf[i].name %></a>
                            <% } %>
                        </div>
                    </div>
                
                    <a class="right item"><%= user.first_name %></a>
                <% } %>
            </div>
        </div>


        <div class="ui three column grid container">
            <div class="row">
                <div class="column">
                    <p><%= name %></p>
                    <img class="ui medium image" src="organizationImage">
                    <p> <%= summary %></p>
                </div>
                <div class="right floated column">
                <p>contact organization(what other things should be here?)</p>

                <% if (statusNumber === 3){ %>
                    <button class="ui button">Update Image</button>
                <% } %>
                </div>
            </div>
            
            <div class="column">
                <h1>Events</h1>
                <div class="ui vertical menu">
                    <% for(var i = 0; i < events.length; i++){ %>
                        <div class="item">
                            <%= events[i].name %>
                        </div>
                    <% } %>

                </div>
            </div>

            <% if(statusNumber > 1){ %>
                <div class="column">
                    <h1>Members</h1>

                    <table class="ui celled table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>hours</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(var i = 0; i < members.length; i++){ %>
                            <tr>
                                <td>
                                    <%= members[i].first_name %>
                                </td>
                                <td>
                                    <%= members[i].memberOrganizationAssociation[0].hours %>
                                </td>
                            </tr>
                        <% } %>
                        </tbody>
                    </table>
                </div>
            <% } %>

            <div class="right floated column">
                <h1>Service Report</h1>
            </div>
        </div>
    </body>
</html>